<div class="flex justify-center mt-4">
  <nav class="pagination">
    <%= paginator.render do %>
      <ul class="pagination">
        <% each_page do |page| %>
          <% if page.left_outer? || page.right_outer? || page.inside_window? %>
            <%= page_tag page %>
          <% elsif !page.was_truncated? -%>
            <%= gap_tag %>
          <% end %>
        <% end %>
      </ul>
    <% end %>
  </nav>
</div>
